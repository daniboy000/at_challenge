<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="at_challenge.deaguiar.daniel.atchalleng.Controller.RouteDetailActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/route_detail_name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="4dp"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"/>

    <TextView
        android:text="STOPS"
        android:textStyle="bold"
        android:textSize="14sp"
        android:padding="4dp"
        android:gravity="left"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"/>

    <ListView
        android:id="@+id/route_detail_stop_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3.0"/>

    <TextView
        android:text="DEPARTURES"
        android:textStyle="bold"
        android:padding="4dp"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.0">

        <TextView
            android:text="WEEKDAYS"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:text="SATURDAYS"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:text="SUNDAYS"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3.0">

        <ListView
            android:id="@+id/route_detail_departure_list_weekday"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"/>

        <ListView
            android:id="@+id/route_detail_departure_list_saturday"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"/>

        <ListView
            android:id="@+id/route_detail_departure_list_sunday"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>


